// prisma/schema.prisma
model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  monthlyIncome Int?
  expenses   Expense[]
}

model Expense {
  id        String   @id @default(cuid())
  description String
  amount    Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
